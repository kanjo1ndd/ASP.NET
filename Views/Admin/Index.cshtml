@model ASP_SPR311.Models.Admin.AdminIndexViewModel

<div class="text-center">
	<h1 class="display-4">Сторінка адміністратора</h1>
</div>

<div class="row">
	<div class="col">
		<h2>Категорії</h2>
		<form id="admin-category-form" enctype="multipart/form-data">
			<div style="color: red;" id="admin-error"></div>

			<label>Назва:</label> <input name="category-name"/>
			<span class="error" id="error-name" style="color: red;"></span><br />

			<label>Опис:</label> <textarea name="category-description"></textarea>
			<span class="error" id="error-description" style="color: red;"></span><br />

			<label>Адреса (Slug):</label> <input name="category-slug"/>
			<span class="error" id="error-slug" style="color: red;"></span><br />

			<label>Картинка:</label> <input name="category-image" type="file"/>
			<span class="error" id="error-image" style="color: red;"></span><br />

			<button type="submit">Додати</button>
		</form>
	</div>
	<div class="col">
		<h2>Товари</h2>
		<form id="admin-product-form" enctype="multipart/form-data">
			Назва: <input name="product-name"/> <span class="error-name error-message"></span><br />

			Опис: <textarea name="product-description"></textarea> <span class="error-description error-message"></span><br />

			Артикул/штрихкод: <input name="product-slug"/> <span class="error-slug error-message"></span><br />

			Картинка: <input name="product-image" type="file" multiple/> <span class="error-image error-message"></span><br />

			Ціна: <input name="product-price" type="number" step="0.01"/> <span class="error-price error-message"></span><br />

			Кількість: <input name="product-stock" type="number" step="1"/> <span class="error-stock error-message"></span><br />

			Категорія: 
			<select name="category-id">
						@foreach (var c in Model.Categories)
						{
						<option value="@c.Id">@c.Name</option>
						}
			</select>
			<span class="error-category error-message"></span><br />

			<button type="submit">Додати</button>

			<div class="admin-error error-message"></div>
		</form>
	</div>
</div>