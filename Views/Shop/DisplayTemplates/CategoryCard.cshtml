@model ASP_SPR311.Data.Entities.Category

<div class="container">
	<div class="d-flex flex-wrap justify-content-center gap-3 py-3 shadow-sm bg-white rounded">
		<a class="nav-link text-dark h-100" asp-controller="Shop" asp-action="Category" asp-route-id="@Model.Slug">
			<div class="card h-100">
				<img src="@(Model.ImageUrl)" alt="Image" class="card-img-top"/>
				<div class="card-body">
					<h5 class="card-title">@Model.Name</h5>
				</div>
			</div>
		</a>
	</div>
</div>